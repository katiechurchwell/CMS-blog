<div class="card mx-auto" style="width: 18rem;">
    <form class="login-form p-4">
        <div class="mb-4">
            <label for="email-login" class="form-label">Email Address</label>
            <input type="text" class="form-control" id="email-login" />
            <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div>
        </div>
        <div class="mb-4">
            <label for="password-login" class="form-label">Password</label>
            <input type="password" class="form-control" id="password-login" />
        </div>
        <button type="submit" class="btn btn-primary">
            Login
        </button>

        <button type="button" class="btn btn-light" data-bs-toggle="modal" data-bs-target="#signupModal">
            Signup
        </button>

    </form>
</div>


<div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Signup</h5>
            </div>
            <div class="modal-body">
                <form class="signup-form p-4">
                    <div class="mb-4">
                        <label for="username-signup" class="form-label">Username</label>
                        <input type="text" class="form-control" id="username-signup" />
                    </div>
                    <div class="mb-4">
                        <label for="email-signup" class="form-label">Email</label>
                        <input type="text" class="form-control" id="email-signup" />
                    </div>
                    <div class="mb-4">
                        <label for="password-signup">Password</label>
                        <input type="password" class="form-control" id="password-signup" />
                        <span id="passwordHelpInline" class="form-text">
                            Must be 8-20 characters long.
                        </span>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Signup</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script src="/javascript/login.js"></script>
<script src="js/jquery-3.5.1.min.js"></script>